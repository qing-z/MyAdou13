<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        app:title="编辑资料"
        app:titleTextColor="@color/white"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:navigationIcon="@mipmap/left_arraw"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <widget.EditProfileItem
                android:id="@+id/ep_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:itemtitle="头像"
                app:itemtype="avatar" />

            <widget.EditProfileItem
                android:id="@+id/ep_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:itemtitle="昵称" />

            <widget.EditProfileItem
                android:id="@+id/ep_adouid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:itemtitle="阿斗号" />

            <widget.EditProfileItem
                android:id="@+id/ep_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:itemtitle="性别" />

            <widget.EditProfileItem
                android:id="@+id/ep_xingzuo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isendline="true"
                app:itemtitle="星座" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/little_gray"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="个人信息"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <widget.EditProfileItem
                android:id="@+id/ep_home_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:itemtitle="家乡" />

            <widget.EditProfileItem
                android:id="@+id/ep_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:itemtitle="职业" />

            <widget.EditProfileItem
                android:id="@+id/ep_active_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:itemtitle="活跃地带" />

            <widget.EditProfileItem
                android:id="@+id/ep_signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isendline="true"
                app:itemtitle="个性签名" />
            <Button
                android:layout_marginTop="50dp"
                android:id="@+id/bt_save_profile"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_save_profile"
                android:text="保存"
                android:textSize="24sp"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>